{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "AOC Run",
			"command": "${command:python.interpreterPath}",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"aoc.py",
				"-p",
				"${relativeFile}"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"detail": "Runs file using aoc.py runner"
		},
		{
			"type": "shell",
			"label": "AOC Download",
			"command": "${command:python.interpreterPath}",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"aoc.py",
				"-p",
				"${relativeFile}",
				"--norun"
			],
			"detail": "Downloads input.txt from AOC website",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "AOC Test",
			"command": "${command:python.interpreterPath}",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"args": [
				"aoc.py",
				"-p",
				"${relativeFile}",
				"-t",
			],
			"group": {
				"kind": "test",
			},
			"detail": "Tests file using aoc.py runner"
		},
        {
            "type": "shell",
            "label": "C build file",
            "command": "/home/linuxbrew/.linuxbrew/bin/clang", 
            "args": [
                "-static",
				"-march=x86-64-v3",
                "-nostdinc",
                "-isystem",
                "~/musl/include/",
                "-I",
                "./libaoc-c/",
                "-L",
                "~/musl/lib/",
                "./libaoc-c/*.c",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.bin"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc" // Clang often uses a compatible problem matcher
            ],
            "group": {
                "kind": "build",
            },
			"presentation": {
				"reveal": "never",
			},
            "detail": "Builds C file using clang+musl"
        }
	]
}